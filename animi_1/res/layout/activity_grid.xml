<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal|center_vertical"
    android:columnCount="14"
    android:orientation="vertical"
    android:rowCount="10" >

    <TableRow
        android:layout_width="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center" >

        <TextView
            android:id="@+id/textViewFejlec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:text="@string/KP_fej"
            android:textSize="32sp" />
    </TableRow>

    <TableRow
        android:layout_marginTop="30dp"
        android:height="400dp" >

        <ScrollView
            android:id="@+id/table_scroll1"
            android:layout_width="wrap_content"
            android:scrollbars="vertical"
            android:layout_height="360dp"
            android:layout_marginLeft="20dp" >

            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TableRow
                    android:id="@+id/tableRow3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/textViewVendeg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="@string/Vendeg"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <Spinner
                        android:id="@+id/spinner_vendegek"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="41dp" />
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/textViewKezelesek"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="@string/Kezelesek"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <Spinner
                        android:id="@+id/spinner_kezelesek"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="41dp" />
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_span="2"
                        android:orientation="vertical"
                        android:shrinkColumns="1" >

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/Leiras"
                            android:textAppearance="?android:attr/textAppearanceMedium" />

                        <EditText
                            android:id="@+id/leiras"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" >

                            <requestFocus />
                        </EditText>

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:text="@string/Diagnozis"
                            android:textAppearance="?android:attr/textAppearanceMedium" />

                        <EditText
                            android:id="@+id/diagnozis"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:text="@string/Anamnezis"
                            android:textAppearance="?android:attr/textAppearanceMedium" />

                        <EditText
                            android:id="@+id/anamnezis"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </TableRow>
            </TableLayout>
        </ScrollView>

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp" >

            <TableRow
                android:id="@+id/tableRow_v1"
                android:layout_width="wrap_content"
                android:gravity="center" >

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/VendegKezelesei"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow_v2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TableLayout
                    android:id="@+id/headervendeg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:background="@android:color/black" >

                    <TableRow>

                        <TextView
                            android:layout_width="95dp"
                            android:layout_margin="1dp"
                            android:layout_weight="1"
                            android:background="#ffcccccc"
                            android:gravity="center_horizontal"
                            android:text="@string/Datum"
                            android:textColor="@android:color/black" />

                        <TextView
                            android:layout_width="200dp"
                            android:layout_margin="1dp"
                            android:layout_weight="1"
                            android:background="@android:color/white"
                            android:gravity="center_horizontal"
                            android:text="@string/Megj"
                            android:textColor="@android:color/black" />
                    </TableRow>
                </TableLayout>
            </TableRow>

            <TableRow
                android:id="@+id/tableRow_v3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <ScrollView
                    android:id="@+id/table_scroll2"
                    android:layout_width="wrap_content"
                    android:layout_height="360dp"
                    android:layout_marginLeft="20dp" >

                    <TableLayout
                        android:id="@+id/maintablevendeg"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" >
                    </TableLayout>
                </ScrollView>
            </TableRow>
        </TableLayout>

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp" >

            <TableRow
                android:id="@+id/tableRow6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/headerszin1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/SzinBeallitas"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TableLayout
                    android:id="@+id/headerszin2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@android:color/black" >

                    <TableRow>

                        <TextView
                            android:layout_width="45dp"
                            android:layout_margin="1dp"
                            android:layout_weight="1"
                            android:background="#ffcccccc"
                            android:gravity="center_horizontal"
                            android:text="@string/Sorsz"
                            android:textColor="@android:color/black" />

                        <TextView
                            android:layout_width="200dp"
                            android:layout_margin="1dp"
                            android:layout_weight="1"
                            android:background="@android:color/white"
                            android:gravity="center_horizontal"
                            android:text="@string/Nev"
                            android:textColor="@android:color/black" />

                        <TextView
                            android:layout_width="50dp"
                            android:layout_margin="1dp"
                            android:layout_weight="1"
                            android:background="@android:color/white"
                            android:gravity="center_horizontal"
                            android:text="@string/Szin"
                            android:textColor="@android:color/black" />
                    </TableRow>
                </TableLayout>
            </TableRow>

            <TableRow
                android:id="@+id/tableRow11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <ScrollView
                    android:id="@+id/scrollView1"
                    android:layout_width="wrap_content"
                    android:layout_height="360dp"
                    android:layout_marginLeft="20dp" >

                    <TableLayout
                        android:id="@+id/maintablelepes"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp" >
                    </TableLayout>
                </ScrollView>
            </TableRow>
        </TableLayout>
    </TableRow>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="140dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="bottom|center"
        android:orientation="horizontal" >

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="135dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center" >

            <TableRow
                android:id="@+id/tableRow7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp" >
            </TableRow>

            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginBottom="20dp" >

                <TextView
                    android:id="@+id/textViewIdo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/viewido"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <Space
                    android:layout_width="40dp"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/TextViewAktIdo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#9CFF00"
                    android:text="@string/zero"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <Space
                    android:layout_width="40dp"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/TextView03"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bs"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <Space
                    android:layout_width="40dp"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/TextViewOsszIdo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#9CFF00"
                    android:text="@string/zero"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <Space
                    android:layout_width="40dp"
                    android:layout_height="match_parent" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp" >

                <TextView
                    android:id="@+id/textViewlepes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/viewlepes"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <Space
                    android:layout_width="40dp"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/textViewLepesAktualis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#9CFF00"
                    android:text="@string/zero"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <Space
                    android:layout_width="40dp"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bs"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <Space
                    android:layout_width="40dp"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/textViewOsszlepes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#9CFF00"
                    android:text="@string/zero"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
            </TableRow>
        </TableLayout>

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="bottom" >

            <TableRow
                android:id="@+id/tableRow12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/textViewAktSzin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/viewAktszin"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <SurfaceView
                    android:id="@+id/surfaceView2"
                    android:layout_width="40dp"
                    android:layout_height="40dp" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp" >

                <Button
                    android:id="@+id/buttonStop"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="@string/BtnStop" />

                <Button
                    android:id="@+id/buttonPause"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="@string/BtnPause" />

                <Button
                    android:id="@+id/buttonRestart"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="@string/BtnRestart" />

                <Button
                    android:id="@+id/buttonStart"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/Btnstarthint"
                    android:text="@string/BtnStart" />
            </TableRow>
        </TableLayout>
    </LinearLayout>

</TableLayout>